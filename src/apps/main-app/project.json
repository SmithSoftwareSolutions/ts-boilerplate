{
  "name": "main-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "src/apps/main-app/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/src/apps/main-app",
        "index": "src/apps/main-app/src/index.html",
        "browser": "src/apps/main-app/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "src/apps/main-app/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "src/apps/main-app/public"
          },
          {
            "input": "src/libs/angular/main/src/lib/assets",
            "glob": "**/*",
            "output": "/assets/"
          },
          {
            "input": "src/libs/angular/core/src/lib/assets",
            "glob": "**/*",
            "output": "/assets/"
          }
        ],
        "styles": ["src/apps/main-app/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "src/libs/angular/core/src/lib/environments/environment.ts",
              "with": "src/libs/angular/core/src/lib/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "main-app:build:production"
        },
        "development": {
          "buildTarget": "main-app:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "main-app:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "src/apps/main-app/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "main-app:build",
        "staticFilePath": "dist/src/apps/main-app/browser",
        "spa": true
      }
    }
  }
}
